<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>

<div class="single-bottom">
	<nav id="taxonomies" class="" data-hook>
		<% @taxonomies.each do |taxonomy| %>
			<% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
			  <h4 ><%= Spree.t(:shop_by_taxonomy, taxonomy: taxonomy.name) %></h4>
			  <%= taxons_tree_product_show(taxonomy.root, @taxon, max_level) %>
			<% end %>
		<% end %>
	</nav>
</div>




