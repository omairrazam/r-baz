<head data-hook="inside_head">
  <%= render partial: 'sprees/shared/head' %>
</head>

<body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
<%#= render partial: 'spree/shared/google_analytics.js' %>
<%= render partial: 'sprees/shared/header' %>

<%= taxon_breadcrumbs(@taxon) %>

<%= render partial: 'sprees/shared/sidebar' if content_for? :sidebar %>

<div id="content" class="container-fluid" data-hook>
  <%= flash_messages %>
  <%= yield %>
</div>

<%= yield :templates %>

<%= render partial: 'sprees/shared/footer' %>
</body>

