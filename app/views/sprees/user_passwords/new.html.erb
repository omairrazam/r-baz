
<!---->
<div class="container">
  <div class="account">
    <%= render :partial => 'sprees/shared/error_messages', :locals => { :target => @spree_user } %>
    <div class="register-top ">
      <h2>Reset Password</h2>
        
      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
          <div>
            <span>Email</span>
            <%= f.text_field :email %>
          </div>
          <%= f.submit "Reset Password", :class => '' %> 
      <% end %>
      
    </div>
  </div>
</div>
